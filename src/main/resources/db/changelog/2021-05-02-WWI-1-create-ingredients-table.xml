<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="baadamczyk"  id="2021-05-02-WWI-1-create-ingredients-table">

        <createTable  tableName="ingredient">
            <column  name="id"  type="int">
                <constraints  primaryKeyName="ingredient_pk" nullable="false"  primaryKey="true"  unique="true"/>
            </column>
        </createTable>

        <createSequence sequenceName="ingredient_seq" incrementBy="1" ordered="true"/>

        <rollback>
            <dropPrimaryKey tableName="ingredient" constraintName="ingredient_pk"/>
            <dropSequence sequenceName="ingredient_seq"/>
            <dropTable tableName="ingredient"/>
        </rollback>
    </changeSet>
</databaseChangeLog>